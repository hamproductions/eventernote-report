{
  "name": "eventernote-reports",
  "version": "1.0.0",
  "description": "Comprehensive reporting and analytics for Eventernote attendance data",
  "type": "module",
  "scripts": {
    "dev": "panda codegen && nodemon",
    "build": "bun run build:ssr && bun run build:server",
    "build:ssr": "panda codegen && bunx --bun vike build",
    "build:server": "bun build src/server/index.ts --outfile=./build/server --compile",
    "start:prod": "NODE_ENV=production bun run src/server/index.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:push": "drizzle-kit push",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@ark-ui/react": "^5.26.0",
    "@bogeychan/elysia-logger": "^0.1.10",
    "@elysiajs/cookie": "^0.8.0",
    "@elysiajs/cors": "^1.4.0",
    "@elysiajs/html": "^1.3.1",
    "@elysiajs/jwt": "^1.4.0",
    "@elysiajs/static": "^1.4.4",
    "@pandacss/dev": "^1.4.2",
    "@park-ui/panda-preset": "^0.43.1",
    "@tanstack/react-query": "^5.90.3",
    "@tanstack/react-query-persist-client": "^5.90.3",
    "cal-heatmap": "^4.2.4",
    "date-fns": "^4.1.0",
    "dayjs": "^1.11.19",
    "drizzle-orm": "^0.44.6",
    "elysia": "^1.4.11",
    "elysia-connect-middleware": "^0.0.6",
    "linkedom": "^0.18.12",
    "lucide-react": "^0.462.0",
    "modern-screenshot": "^4.6.6",
    "postgres": "^3.4.7",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "recharts": "^2.15.0",
    "vike": "^0.4.242",
    "vike-react": "^0.6.9",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bun": "latest",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "babel-plugin-react-compiler": "^19.1.0-rc.3",
    "drizzle-kit": "^0.31.5",
    "nodemon": "^3.1.9",
    "postcss": "^8.5.6",
    "postcss-prune-var": "^1.1.2",
    "typescript": "^5.7.3",
    "vite": "^7.1.9",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "trustedDependencies": [
    "esbuild",
    "@esbuild/darwin-arm64"
  ]
}
